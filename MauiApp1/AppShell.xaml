<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp1">

    <TabBar>
        <ShellContent
            Title="Güç Hesaplama"
            Icon="thunderbolt.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Döviz Dönüştür"
            Icon="change.png"
            ContentTemplate="{DataTemplate local:NewPage1}"
            Route="SearchPage" />

        <ShellContent
            Title="Kök Hesapla"
            Icon="function.png"
            ContentTemplate="{DataTemplate local:NewPage2}"
            Route="NotificationsPage" />

        <ShellContent
            Title="Süre Ölç"
            Icon="timeleft.png"
            ContentTemplate="{DataTemplate local:NewPage3}"
            Route="ProfilePage" />

        <ShellContent
            Title="Hacim"
            Icon="volume.png"
            ContentTemplate="{DataTemplate local:NewPage4}"
            Route="SettingsPage" />
    </TabBar>

</Shell>
